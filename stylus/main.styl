@import "nib"
@import "color_fonts.styl"
@import "mixins.styl"

global-reset()

body
  background bg

.navbar
  background-color bgnav
.logo
  width 100%

//  Cards
.row
  margin-top 5rem!important
.card
  background-color bgcards!important
  width 20rem
  height 38rem
  float left
  margin-bottom 2rem
  border-color #3a3f40!important
.card-title
  font-family fontcardtitle
.card-body
  color #98859e
.card-img-top
  height 25rem
.del_but
  background-color #98859e
  border-radius 3px
  border none


//tags
.tag
  width 32px
  height 32px
.sport
  background-image sport
.tears
  background-image tears
.love
  background-image favorite
.self-education
  background-image education
.miracle
  background-image miracle
.christmas
  background-image christmas
.vampire
  background-image url(../img/vampire.png)
.filter
  background-color #ab98b1


#Container .mix
  display none

// search
#div1
  display none

.hidding
  visibility hidden
  opacity 0
// modals
.modal-content
  background-color rgba(152, 133, 158, 0.71) !important
.center-block
  margin auto
.card-font
